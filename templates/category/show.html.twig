{% extends "base.html.twig" %}

{% block title %}Categorie{{ category.name }}{% endblock %}

{% block body %}
    {% include '_components/_navbar.html.twig' %}
    {% for modele in modeles %}
    <div>
        <h2>{{ loop.index }} / <a href="{{ path("modele_show", { id: modele.id }) }}">{{ modele.name }}</a> - Catégorie : {{ modele.category.name }}</h2>
        <p>{{ modele.description }}</p>
    </div>
    {% else %}
    Aucun modèle trouvé.
    {% endfor %}
    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
    {% include "_components/_footer.html.twig" %}
{% endblock %}