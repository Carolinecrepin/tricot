{% extends 'base.html.twig' %}

{% block title %} Les Pelotes{% endblock %}

{% block body %}
    {% include '_components/_navbar.html.twig' %}
    <h1 class="title-page">Les pelotes : </h1>

    <section class="section-pelote-index">
        {% for pelote in pelotes %}
        <div class= "template-cards-pelote">
                <div class= "card-category">
                    <div>
                        <h3>{{ pelote.name }}</h3>
                        <p><img class="modele-photo-vignette-pelote" src="{{ pelote.image}}" alt="{{ pelote.name }} image"></p>                       
                        <p><a class="lien-card" href="{{ path("pelote_show", { id: pelote.id }) }}">Voir la pelote</a></p>
                        <p><a class="lien-card" href="{{ path('pelote_edit', {'id': pelote.id}) }}">Ã©diter</a></p>
                    </div>
                </div>
        </div>
        {% else %}
            <tr>
                <td colspan="8">Il n'y a pas de pelotes</td>
            </tr>
        {% endfor %}
    </section>
        <div class="lien-retour">
            <a class="lien-card" href="{{ path('pelote_new') }}">Ajouter une nouvelle pelote</a>
        </div>
{% endblock %}